extends layout

block content
  h1= title
  -let items = results
  div(class="container-fluid")
    div(class="row")
      each item,index in items
        div(class="col-sm-2",onClick=`buy(${index})`)
          p unicycle_type:  #{item.unicycle_type}
          p unicycle_size:  #{item.unicycle_size}
          p unicycle_cost:  #{item.unicycle_cost}
  script.
    function buy(N) {
      N=N+1;
      alert('You purchased item '+N);
    }